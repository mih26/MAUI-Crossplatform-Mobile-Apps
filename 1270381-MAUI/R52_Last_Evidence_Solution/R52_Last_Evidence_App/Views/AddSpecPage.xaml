<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="R52_Last_Evidence_App.Views.AddSpecPage"
             Title="AddSpecPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <VerticalStackLayout Margin="10" Spacing="10">
            <Entry Placeholder="Config Type" Text="{Binding SpecName,Mode=TwoWay}" />
            <Entry Placeholder="Config value" Text="{Binding Value,Mode=TwoWay}" />
            <Button Text="Save" Clicked="Button_Clicked"></Button>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>